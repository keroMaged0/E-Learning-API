{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2016",
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "declaration": true,
    "strict": true,
  },
  "include": [
    "src/**/*",
    "src/index.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.spec.ts",
    "__test__"
  ]
}